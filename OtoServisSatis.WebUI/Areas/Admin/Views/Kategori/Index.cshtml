@model IEnumerable<OtoServisSatis.Entities.Kategori>

@{
    ViewData["Title"] = "Kategori Listesi";
}

<h2>Kategori Listesi</h2>
<p>
    <a class="btn btn-outline-primary" asp-action="Create">Yeni Kategori Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Adi</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
