@model IEnumerable<OtoServisSatis.Entities.Zimmet>

@{
    ViewData["Title"] = "Zimmetler";
}

<h1>Zimmetler</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MusteriId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZimmetTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Demirbas.UrunTipi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZimmetTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Demirbas.UrunTipi) 
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>




 