@model OtoServisSatis.Entities.Zimmet

@{
    ViewData["Title"] = "Zimmet Düzenle";
}



<h4>Zimmet Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DemirbasId" class="control-label"></label>
                <select asp-for="DemirbasId" class="form-select" asp-items="ViewBag.DemirbasId"></select>
                <span asp-validation-for="DemirbasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusteriId" class="control-label"></label>
                <input asp-for="MusteriId" class="form-select" />
                <span asp-validation-for="MusteriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZimmetTarihi" class="control-label"></label>
                <input asp-for="ZimmetTarihi" class="form-control" />
                <span asp-validation-for="ZimmetTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Vazgeç</a>
</div>

